@model WebApplication2.Models.WarehouseProduct

@{
    ViewBag.Title = "Add Existing Product";
}

<h2>Add Product to Warehouse</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Product", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("productId", null, "Select a Product", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Count", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="number" name="count" class="form-control" min="1" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Product" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
