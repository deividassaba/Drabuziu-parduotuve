<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ADIBAS", "Shop", "Products", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Categories">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Payments">Payments</a>
                    </li>
                    <li>
                        <a class="nav-link active" href="/Coupons">Coupons</a>
                    </li>

                                    <ul class="nav navbar-nav navbar-right">
                    @if (Session["UserId"] == null) // If user is not logged in
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "Authentication", new { area = "" }, new { @class = "btn btn-success navbar-btn" })
                        </li>
                        <li>
                            @Html.ActionLink("Register", "Register", "Authentication", new { area = "" }, new { @class = "btn btn-primary navbar-btn" })
                        </li>
                    }
                    else // If user is logged in
                    {
                        <li>
                            @Html.ActionLink("View Profile", "Index", "Profile/View", new { area = "" }, new { @class = "btn btn-info navbar-btn" })
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Authentication", new { area = "" }, new { @class = "btn btn-danger navbar-btn" })
                        </li>
                    }
                </ul>

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Adibas komanda: Edgaras Beržanskas, Liutauras Šėlys, Justinas Lisauskas, Deividas Sabaliauskas, Povilas Markevičius
            </p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
